/* Header guard */
#ifndef ARIA_MAP_H
#define ARIA_MAP_H

/* Includes */
#include <cstddef>

/* Classes */
namespace AriaMap
{
    int    openfd(void);
    int    writefd(long *w, size_t s);
    int    readfd(long *r, size_t s);
    int    set(long val);
    int    store(long a, long b);
    int    map(void);
    int    unmap(void);
    int    length(void);
    int    clear(void);
    int    next(void);
};

#endif /* ARIA_MAP_H */
